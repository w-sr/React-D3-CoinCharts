{
  "name": "coincharts",
  "version": "2.0.0",
  "description": "Cryptocurrency price chart, powered by Coinbase API",
  "repository": "tohjustin/coincharts",
  "license": "MIT",
  "scripts": {
    "build": "react-scripts build && rm build/static/**/*.map",
    "check": "npm run stylelint && npm run lint",
    "deploy": "npm run check && npm run build && cp now.json ./build && now ./build --public && now alias",
    "eject": "react-scripts eject",
    "lint": "xo",
    "precommit": "npm run lint && lint-staged",
    "serve": "npm run build && serve ./build",
    "start": "react-scripts start",
    "stylelint": "stylelint --color -- \"src/**/*.css\"",
    "test": "CI=true react-scripts test --env=jsdom",
    "test:coverage": "npm run test -- --coverage --verbose",
    "test:watch": "react-scripts test --env=jsdom",
    "updatePriceData": "scripts/updatePriceData.sh ./public/priceData"
  },
  "dependencies": {
    "axios": "0.17.1",
    "classnames": "2.2.5",
    "currency-formatter": "1.3.1",
    "d3-array": "1.2.1",
    "d3-ease": "1.0.3",
    "d3-interpolate-path": "2.0.1",
    "d3-scale": "1.0.7",
    "d3-selection": "1.2.0",
    "d3-shape": "1.2.0",
    "d3-time-format": "2.1.1",
    "d3-transition": "1.1.1",
    "lodash.get": "4.4.2",
    "lodash.isequal": "4.5.0",
    "prop-types": "15.6.0",
    "react": "16.2.0",
    "react-dom": "16.2.0",
    "react-helmet": "5.2.0",
    "react-redux": "5.0.6",
    "react-scripts": "1.0.17",
    "redux": "3.7.2",
    "redux-saga": "0.16.0",
    "reselect": "3.0.1"
  },
  "devDependencies": {
    "codecov": "3.0.0",
    "enzyme": "3.3.0",
    "enzyme-adapter-react-16": "1.1.1",
    "eslint-config-prettier": "2.9.0",
    "eslint-config-xo-react": "0.15.0",
    "eslint-plugin-react": "7.5.1",
    "husky": "0.14.3",
    "jest-enzyme": "4.0.2",
    "lint-staged": "6.0.0",
    "now": "9.0.1",
    "prettier": "1.9.2",
    "serve": "6.4.3",
    "stylelint": "8.4.0",
    "stylelint-config-standard": "18.0.0",
    "xo": "0.18.2"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!<rootDir>/node_modules/"
    ]
  },
  "prettier": {
    "printWidth": 120
  },
  "xo": {
    "envs": [
      "browser",
      "jest"
    ],
    "extends": [
      "prettier",
      "xo-react"
    ],
    "ignores": [
      "src/registerServiceWorker.js"
    ],
    "rules": {
      "import/no-unassigned-import": 0,
      "react/jsx-tag-spacing": 0,
      "unicorn/filename-case": 0,
      "quotes": [
        "error",
        "double",
        {
          "allowTemplateLiterals": true
        }
      ]
    },
    "space": true
  }
}
